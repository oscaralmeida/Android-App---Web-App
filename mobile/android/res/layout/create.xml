<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
  <LinearLayout
  
  android:layout_marginBottom="5dip"
	android:layout_marginLeft="10dip"
	android:layout_marginTop="5dip"
	android:layout_marginRight="10dip"
		android:id="@+id/Ll" 
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_weight="1">

      <ImageView android:id="@+id/PreviewImage"
android:paddingBottom="5dip"
android:src="@drawable/photo"

android:layout_width="fill_parent" android:layout_height="fill_parent"></ImageView>  

  </LinearLayout>
        
  <LinearLayout 
  	android:layout_marginBottom="3dip"
	android:layout_marginLeft="10dip"
	android:layout_marginTop="15dip"
	android:layout_marginRight="10dip"
	
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="bottom">

<TextView
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/chooseCategory"
android:textColor="#000000"
android:visibility="gone"
/>

 <Spinner 
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/chooseCategory"
    />

<TextView
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/msg"
android:textColor="#000000"
/>
<EditText
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:height="100dip"
	android:id="@+id/Text" 
	android:maxLength="140"
/>



<Button
android:layout_width="fill_parent"
android:layout_height="45dip"
android:typeface="sans"
android:textSize="21dip"
android:text="@string/sendButton" 
android:id="@+id/SendReport" 
android:layout_marginBottom="5dip"/>

 
  </LinearLayout>

</LinearLayout>


