<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
                <shape>
        
            <gradient
                android:startColor="#00df00"
                android:endColor="#00ba00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#009B0B" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
        
            <gradient
                android:startColor="#00ba00"
                android:endColor="#007b00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#009B0B" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
        
            <gradient
                android:startColor="#00ba00"
                android:endColor="#007b00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#009B0B" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item> 
</selector>
